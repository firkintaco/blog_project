<%- include('partials/header') -%>
<h1>Home</h1>
<p><%= content %></p>

<h2>Posts</h2>
<hr />
<% if(posts.length === 0) { %>
<p>No posts, <a href="/compose">compose new</a>.</p>
<% } %> <% posts.forEach(post => { %> <% const content =
post.content.substring(0,100); %>
<h3><%= post.title %></h3>
<p><%= content %>... <a href="/post/<%= post._id %>">Read More</a></p>
<hr />
<% }); %> <%- include('partials/footer') -%>
